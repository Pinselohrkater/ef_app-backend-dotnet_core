@model Eurofurence.App.Domain.Model.Dealers.DealerRecord
@{
    Layout = "~/Views/Shared/_WebPreviewLayout.cshtml";

    ViewBag.Title = string.IsNullOrEmpty(Model.DisplayName) ? Model.AttendeeNickname : (Model.DisplayName.Equals(Model.AttendeeNickname) ? Model.DisplayName : $"{Model.DisplayName} ({Model.AttendeeNickname})");
    ViewBag.SubTitle = string.Join(", ", Model.Categories);

    var days = new string[] { };

    if (Model.AttendsOnThursday)
    {
        days.Append("Thursday");
    }

    if (Model.AttendsOnFriday)
    {
        days.Append("Friday");
    }

    if (Model.AttendsOnSaturday)
    {
        days.Append("Saturday");
    }

}

<header>
    @Model.ShortDescription
</header>

<section class="summary">
    @if (!string.IsNullOrEmpty(Model.TwitterHandle))
    {
        <span><i class="fab fa-twitter"></i> <a href="https://twitter.com/@Model.TwitterHandle" title="Twitter: @@@Model.TwitterHandle">@Model.TwitterHandle</a></span>
    }
    @if (!string.IsNullOrEmpty(Model.TelegramHandle))
    {
        <span><i class="fab fa-telegram"></i> <a href="https://t.me/@Model.TelegramHandle" title="Telegram: @@@Model.TelegramHandle">@Model.TelegramHandle</a></span>
    }
    @if (days.Length > 0)
    {
        <span><i class="fas fa-calendar"></i> Only on @string.Join(", ", days)</span>
    }
    @if (Model.IsAfterDark)
    {
        <span><i class="fas fa-moon"></i> After Dark</span>
    }
</section>

<hr />

<section class="row">
    <p class="one-half column">
        @Model.AboutTheArtistText
    </p>
    @if (Model.ArtistImageId != null)
    {
        <img src="@ViewBag.ApiBaseUrl/Images/@Model.ArtistImageId.ToString()/Content" title="@Model.DisplayName" class="one-half column" />
    }
</section>

<section class="row reverse">
    @if (!string.IsNullOrEmpty(Model.AboutTheArtText))
    {
        <p class="one-half column">
            @Model.AboutTheArtText
        </p>
    }
    @if (Model.ArtPreviewImageId != null)
    {
        <img src="@ViewBag.ApiBaseUrl/Images/@Model.ArtPreviewImageId.ToString()/Content" title="@Model.ArtPreviewCaption" class="one-half column" />
    }
</section>
